@model AnimalGame.Models.DTOGame

@{
    ViewBag.Title = "CreateGame";
}

<h2>CreateGame</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-horizontal">
                    <hr />
                    <p>Bitte gib den Namen der neuen Spielrunde und einen Nick ein:</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        @Html.LabelFor(model => model.GameRound.GameName, "Name der Spielrunde", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.GameRound.GameName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GameRound.GameName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CurrentPlayer.NickName, "Nickname", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.CurrentPlayer.NickName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CurrentPlayer.NickName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 output">
                Eindeutige ID für die Spielerunde: <span></span>
                <div class="col-md-offset-2 col-md-2">
                    <a href="~/NewGame/Join">... weiter zum Spiel ...</a>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
